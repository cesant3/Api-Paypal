    <body>
        <div>
            <h1>Doações</h1>
            <hr /><br />

            <div>
                <% for(var i=0; i<products.length; i++) { %>
                    <h2><%= products[i].titulo %></h2>
                    <p><%= products[i].descricao %></p>

                    <form action="/buy?id=<%= products[i].id %>" method="POST">
